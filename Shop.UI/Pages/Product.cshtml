@page "{name}"
@model Shop.UI.Pages.ProductModel
@{
}

@*
    before => href="/Product?name=NameText"
    asp-route-name="@p.Name" => asp-route-name => name => @page "{name}"
    after  => href="/Product/NameText"
*@

<div>
    <p>@Model.Product.Name</p>
    <p>@Model.Product.Description</p>
    <p>@Model.Product.Value</p>
    <div>
        <form method="post">
            <label>Stock</label>
            <select asp-for="CartViewModel.StockId">
                @foreach (var s in Model.Product.Stock) {
                    <option value="@s.Id">@s.Description</option>
                }
            </select>
            <label>Qty:</label>
            <input asp-for="CartViewModel.Qty" />
            <button type="submit">Submit</button>
        </form>
    </div>
</div>
<vc:cart view="Default"></vc:cart>