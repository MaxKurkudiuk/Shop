@page
@model IndexModel
@{
}

<div id="app" class="container">
    <div class="columns">
        <div class="column is-3">   @*is-3 => 3 segments*@
            <div class="menu">
                <p class="menu-label">Admin Menu</p>
                <ul class="menu-list">
                    <li><a href="#" @@click="menu = 0">Products</a></li>
                    <li><a href="#" @@click="menu = 1">Orders</a></li>
                    <li><a href="#" @@click="menu = 2">Stock</a></li>
                </ul>
            </div>
        </div>
        <div class="column is-9">
            <product-manager v-if="menu === 0"></product-manager>
            <p v-else-if="menu === 1">Orders</p>
            <p v-else-if="menu === 2">Stock</p>
        </div>
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.21/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/admin/product-component.js"></script>
    <script src="~/js/admin/main.js"></script>
}