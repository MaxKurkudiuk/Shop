<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.UI</title>
    
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.css">
        @*<link href="~/lib/bulma/css/bulma.css" rel="stylesheet" />*@
    </environment>
    <environment include="Production">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
        @*<link href="~/lib/bulma/css/bulma.min.css" rel="stylesheet" />*@
    </environment>
</head>
<body>

    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="https://bulma.io">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                @if (User.Identity.IsAuthenticated) {
                    <a class="navbar-item" asp-page="/Admin/Index">
                        Admin
                    </a>
                }
            </div>

            <div class="navbar-end">
                @if (User.Identity.IsAuthenticated) {
                        <a class="navbar-item" asp-controller="Account" asp-action="Logout">Sign Out</a>
                } else {
                        <a class="navbar-item" asp-page="/Accounts/Login">Sign In</a>
                }
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2021 - Shop.UI</p>
        </footer>
    </div>

    @await Component.InvokeAsync("Cart")

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment include="Production">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
